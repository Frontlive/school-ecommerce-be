{
	"name": "school-ecommerce-be",
	"version": "1.0.0",
	"main": "index.ts",
	"repository": "git@github.com:Frontlive/school-ecommerce-be.git",
	"author": "Frontlive-Survi",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm ./index.ts",
		"start:prod": "yarn db:migrate:prod:up && node build/main",
		"db:migrate:up": "yarn prisma migrate dev && yarn prisma generate",
		"db:migrate:prod:up": "yarn prisma migrate deploy",
		"lint": "eslint . --ext .ts",
		"prepare": "husky install",
		"test": "jest"
	},
	"dependencies": {
		"@fastify/autoload": "^5.2.0",
		"@fastify/swagger": "^7.4.1",
		"dotenv": "^16.0.1",
		"fastify": "^4.4.0",
		"prisma": "^4.2.1"
	},
	"devDependencies": {
		"@tsconfig/node16": "^1.0.3",
		"@types/node": "^18.7.2",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"eslint": "^8.21.0",
		"husky": "^8.0.0",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"supertest": "^6.2.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"eslint . --ext .ts",
			"prettier --write ."
		]
	},
	"jest": {
		"testEnvironment": "node"
	}
}
